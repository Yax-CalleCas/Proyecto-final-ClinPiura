@model IEnumerable<MediCita.Web.Entidades.ReporteCita>
@{
    Layout = null;
    // Aseguramos que el modelo no sea nulo para evitar el NullReferenceException
    var lista = Model ?? new List<MediCita.Web.Entidades.ReporteCita>();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte_Citas_@DateTime.Now.ToString("yyyyMMdd")</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 11px;
            color: #333;
        }

        .header-report {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .table thead {
            background-color: #f8fafc !important;
            -webkit-print-color-adjust: exact;
        }

        .table th {
            text-transform: uppercase;
            font-size: 10px;
            letter-spacing: 0.5px;
        }

        /* Estilos para los estados en el PDF */
        .badge-atendida {
            color: #157347;
            font-weight: bold;
        }

        .badge-pendiente {
            color: #997404;
            font-weight: bold;
        }

        .badge-cancelada {
            color: #bb2d3b;
            font-weight: bold;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                padding: 0 !important;
                margin: 0 !important;
            }

            .container-fluid {
                width: 100% !important;
            }
        }
    </style>
</head>
<body class="p-4">

    <div class="no-print bg-light border p-3 mb-4 rounded d-flex justify-content-between align-items-center shadow-sm">
        <div>
            <h6 class="mb-0 fw-bold">Vista Previa del Reporte</h6>
            <small class="text-muted">Revise los datos antes de imprimir o guardar.</small>
        </div>
        <div>
            <button onclick="window.print()" class="btn btn-primary px-4">
                <i class="bi bi-printer"></i> Imprimir / Guardar PDF
            </button>
            <button onclick="window.history.back()" class="btn btn-outline-secondary ms-2">Regresar</button>
        </div>
    </div>

    <div class="header-report row align-items-center">
        <div class="col-7">
            <h2 class="fw-bold text-primary mb-0">CLINPIURA</h2>
            <p class="mb-0 small text-muted">Centro de Especialidades Médicas</p>
            <p class="mb-0 small text-muted">Calle Libertad 456, Piura | RUC: 20600000000</p>
        </div>
        <div class="col-5 text-end">
            <h4 class="text-uppercase fw-light mb-1">Reporte Detallado de Citas</h4>
            <p class="mb-0"><strong>Periodo:</strong> @ViewBag.FechaInicio al @ViewBag.FechaFin</p>
            <p class="mb-0"><strong>Filtro Estado:</strong> @(ViewBag.Estado ?? "Todos")</p>
            <p class="mb-0"><strong>Fecha Emisión:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light text-center">
            <tr>
                <th style="width: 10%">Fecha</th>
                <th style="width: 8%">Hora</th>
                <th style="width: 25%">Paciente</th>
                <th style="width: 25%">Médico / Especialidad</th>
                <th style="width: 12%">Monto</th>
                <th style="width: 20%">Estado / Nota</th>
            </tr>
        </thead>
        <tbody>
            @if (lista.Any())
            {
                foreach (var item in lista)
                {
                    <tr>
                        <td class="text-center">@item.FechaCita.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@(item.HoraInicio.HasValue? item.HoraInicio.Value.ToString(@"hh\:mm") : "--:--")</td>
                        <td>
                            <div class="fw-bold">@item.Paciente</div>
                            <small class="text-muted">Cita #@item.IdCita</small>
                        </td>
                        <td>
                            <div>@item.Medico</div>
                            <div class="text-muted small text-uppercase">@item.Especialidad</div>
                        </td>
                        <td class="text-end fw-bold">S/ @(item.MontoPagar?.ToString("F2") ?? "0.00")</td>
                        <td>
                            @* Lógica basada en la letra del estado que agregamos al SP *@
                            @if (item.Estado == "A")
                            {
                                <span class="badge-atendida">Atendida</span>
                            }
                            else if (item.Estado == "P")
                            {

                                <span class="badge-pendiente">Pendiente</span>
                            }
                            else
                            {

                                <span class="badge-cancelada">Cancelada</span>
                            }

                            @if (!string.IsNullOrEmpty(item.NotaCita))
                            {
                                <div class="x-small text-muted mt-1 italic">Nota: @item.NotaCita</div>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">
                        No se encontraron registros para los filtros seleccionados.
                    </td>
                </tr>
            }
        </tbody>
        @if (lista.Any())
        {
            <tfoot class="table-light">
                <tr class="fw-bold">
                    <td colspan="4" class="text-end">TOTAL RECAUDADO:</td>
                    <td class="text-end text-primary">S/ @lista.Sum(x => x.MontoPagar ?? 0).ToString("F2")</td>
                    <td class="text-center small">@lista.Count() Citas</td>
                </tr>
            </tfoot>
        }
    </table>

    <div class="mt-5 row">
        <div class="col-4 text-center">
            <div class="mt-4" style="border-top: 1px solid #dee2e6; padding-top: 5px;">
                Firma Autorizada
            </div>
        </div>
        <div class="col-8 text-end">
            <p class="text-muted small">
                Este es un documento oficial generado por el sistema MediCita. <br />
                Generado por el usuario: <strong>@User.Identity.Name</strong>
            </p>
        </div>
    </div>

</body>
</html>