@model dynamic
@{
    ViewData["Title"] = "Mi Panel de Salud";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container py-5">

    <!-- Saludo y estadísticas generales -->
    <div class="row mb-5 align-items-center">
        <div class="col-md-8">
            
            <p class="text-secondary lead">Bienvenido a tu portal de salud. Gestiona tus citas y compras fácilmente.</p>
        </div>
    </div>

    <!-- Estadísticas del paciente -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Citas Totales</h5>
                    <p class="card-text fs-4">@Model.TotalCitas</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-hourglass-split display-4 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Citas Pendientes</h5>
                    <p class="card-text fs-4">@Model.Pendientes</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-check-circle display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Citas Atendidas</h5>
                    <p class="card-text fs-4">@Model.Atendidas</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-x-circle display-4 text-danger mb-3"></i>
                    <h5 class="card-title fw-bold">Citas Canceladas</h5>
                    <p class="card-text fs-4">@Model.Canceladas</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-cart display-4 text-info mb-3"></i>
                    <h5 class="card-title fw-bold">Compras Realizadas</h5>
                    <p class="card-text fs-4">@Model.ComprasRealizadas</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-cash-stack display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Total Gastado</h5>
                    <p class="card-text fs-4">S/ @Model.TotalGastado.ToString("0.00")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-pills display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Farmacia Online</h5>
                    <p class="text-muted">Explora nuestro catálogo y recibe tus medicinas en casa.</p>
                    <a href="@Url.Action("Catalogo", "Venta")" class="btn btn-primary rounded-pill px-4 mt-3">Ver Catálogo</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-calendar-plus display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Nueva Cita</h5>
                    <p class="text-muted">Reserva una cita con nuestros especialistas y evita colas.</p>
                    <a href="@Url.Action("Crear", "Citas")" class="btn btn-success rounded-pill px-4 mt-3">Agendar Ahora</a>
                </div>
            </div>
        </div>

    </div>

</div>

<style>
    .card i {
        font-size: 3rem;
    }

    .text-primary {
        color: #0d6efd;
    }

    .text-success {
        color: #198754;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-warning {
        color: #ffc107;
    }

    .text-info {
        color: #0dcaf0;
    }
</style>
