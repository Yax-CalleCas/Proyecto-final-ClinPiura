@model IEnumerable<MediCita.Web.Entidades.Medicamento>

@{
    ViewData["Title"] = "Medicamentos";
}

<div class="container mt-5 mb-5">
    <!-- Encabezado -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="bi bi-capsule me-2"></i>Catálogo de Medicamentos
            </h2>
            <p class="text-muted mb-0">Gestión completa del inventario farmacéutico</p>
        </div>
        <a asp-action="Crear" class="btn btn-primary btn-lg mt-3 mt-md-0 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Nuevo Medicamento
        </a>
    </div>

    <!-- Tarjeta principal -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="text-center">Imagen</th>
                                <th>Nombre</th>
                                <th>Laboratorio</th>
                                <th class="text-end">Precio</th>
                                <th class="text-center">Stock</th>
                                <th class="text-center">Promoción</th>
                                <th>Categoría</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <!-- Imagen -->
                                    <td class="text-center">
                                        <img src="@(string.IsNullOrWhiteSpace(item.ImagenUrl)
                                                                                         ? "https://via.placeholder.com/80x80/198C86/ffffff?text=" + item.Nombre[0]
                                                                                         : item.ImagenUrl)"
                                     class="rounded-circle shadow-sm"
                                     style="width: 70px; height: 70px; object-fit: cover;"
                                     alt="@item.Nombre" />
                            </td>

                                    <!-- Nombre -->
                                    <td>
                                        <strong>@item.Nombre</strong>
                                    </td>

                                    <!-- Laboratorio -->
                                    <td>
                                        <i class="bi bi-building me-1 text-muted"></i>@item.Laboratorio
                                    </td>

                                    <!-- Precio -->
                                    <td class="text-end fw-bold text-success">
                                        S/ @item.Precio.ToString("N2")
                                    </td>

                                    <!-- Stock -->
                                    <td class="text-center">
                                @if (item.Stock > 10)
                                        {
                                            <span class="badge bg-success">@item.Stock</span>
                                        }
                                        else if (item.Stock > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@item.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Agotado</span>
                                        }
                                    </td>

                                    <!-- Promoción -->
                                    <td class="text-center">
                                        @if (string.IsNullOrWhiteSpace(item.Promocion))
                                        {
                                            <span class="badge bg-secondary">Sin promoción</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">@item.Promocion</span>
                                        }
                                    </td>

                                    <!-- Categoría -->
                                    <td>
                                        <span class="badge bg-info text-dark">@item.Categoria</span>
                                    </td>

                                    <!-- Acciones -->
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Editar" asp-route-id="@item.IdMedicamento"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <form asp-action="Eliminar" asp-route-id="@item.IdMedicamento" method="post"
                                                  class="d-inline" onsubmit="return confirm('¿Realmente deseas eliminar @item.Nombre?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                                    <i class="bi bi-trash3"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <!-- Mensaje cuando no hay datos -->
                <div class="text-center py-5">
                    <i class="bi bi-capsule-pill display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No hay medicamentos registrados aún</h4>
                    <p class="text-muted mb-4">¡Agrega tu primer medicamento!</p>
                    <a asp-action="Crear" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i> Crear Medicamento
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Paginación (mejorada) -->
    @if (ViewBag.TotalPaginas > 1)
    {
        <nav aria-label="Paginación de medicamentos" class="mt-4">
            <ul class="pagination pagination-lg justify-content-center">
                

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                    </li>
                }

               
            </ul>
        </nav>
    }
</div>